
<div class="container">
  <div class="row">
    <h1>Search results</h1>
  </div>
  <div class="recipe-cards">
    <% @recipes.each do |r| %>
      <div class="card-category" style='background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= asset_path "#{recipe.image_url}" %>)'>
        <%= link_to r.title, recipe_path(recipe) %>
      </div>
    <% end %>
  </div>
</div>
