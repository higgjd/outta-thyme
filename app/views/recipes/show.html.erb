<div class="container">
  <h1> <%= "#{@recipe.title}" %></h1>
  <div class="recipe-content">
    <div class="recipe-info">
    <ul>
      <li><strong>Time to make:</strong><%= "#{@recipe.ready_in_minutes}" %></li>
      <li><strong>Description:</strong><%= "#{@recipe.instructions}" %></li>
      <li>
        <strong>Ingredients you have:</strong> <% @recipe.used_ingredients.each do |ingredient| %>
          <%= "#{ingredient}" %>
        <% end %>
      </li>
      <li>
        <strong>Ingredients you need to buy:</strong> <% @recipe.missed_ingredients.each do |ingredient| %>
          <%= "#{ingredient}" %>
        <% end %>
      </li>
    </ul>
    </div>
    <%= image_tag(@recipe.image_url) %>
  </div>
</div>
